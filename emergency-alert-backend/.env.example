CORS_ALLOWED_ORIGINS=

# ── Production hardening ──────────────────────────────────────────────────────
# SESSION_COOKIE_SECURE and CSRF_COOKIE_SECURE default to True when DEBUG=False,
# so they do NOT need to be set explicitly unless you want to override them.
# SECURE_SSL_REDIRECT and SECURE_HSTS_SECONDS must be set explicitly because:
#   - SSL_REDIRECT: some deployments terminate SSL at the load balancer
#   - HSTS_SECONDS: irreversible once browsers cache it — opt in deliberately
#
# Minimum production values (copy to .env and set DEBUG=False):
#   DEBUG=False
#   ALLOWED_HOSTS=yourdomain.com
#   CORS_ALLOW_ALL_ORIGINS=False
#   CORS_ALLOWED_ORIGINS=https://yourdomain.com
#   SECURE_SSL_REDIRECT=True
#   SECURE_HSTS_SECONDS=31536000
#   SESSION_COOKIE_SECURE=True   # already auto-enabled when DEBUG=False
#   CSRF_COOKIE_SECURE=True      # already auto-enabled when DEBUG=False
SECURE_HSTS_SECONDS=0
SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE and CSRF_COOKIE_SECURE are omitted here so the
# auto-default (True when DEBUG=False, False when DEBUG=True) takes effect.
# Uncomment and set explicitly only to override the default behaviour:
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
